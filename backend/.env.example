# WhatsApp Bot Environment Configuration
# Copy this file to .env and update the values

# Server Configuration
PORT=3001
NODE_ENV=development

# WhatsApp Web.js Configuration
WHATSAPP_SESSION_NAME=whatsapp-bot-session
WHATSAPP_HEADLESS=true
WHATSAPP_RETRY_LIMIT=3
WHATSAPP_AUTO_RECONNECT=true

# Security
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key-change-this-in-production

# Database Configuration (if using external DB)
# DATABASE_URL=mongodb://localhost:27017/whatsapp-bot
# DATABASE_NAME=whatsapp-bot

# Email Configuration (for notifications)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/whatsapp-bot.log

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Webhook Configuration (optional)
# WEBHOOK_URL=https://your-webhook-endpoint.com/webhook
# WEBHOOK_SECRET=your-webhook-secret

# Auto-reply Settings (default)
AUTO_REPLY_ENABLED=false
AUTO_REPLY_MESSAGE=Thanks for your message! We'll get back to you soon.

# Working Hours (24-hour format)
WORKING_HOURS_ENABLED=false
WORKING_HOURS_START=09:00
WORKING_HOURS_END=17:00
WORKING_HOURS_TIMEZONE=UTC
